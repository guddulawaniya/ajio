            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
